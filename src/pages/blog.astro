---
import BaseLayout from '../layouts/base-layout.astro';
import '../styles/global.css';
import BlogPost from '../components/blog-post.astro';
const allPosts = Object.values(import.meta.glob('./posts/*.md', { eager: true }));
const pageTitle = "Matt's Astro Blog";
---
<BaseLayout pageTitle={pageTitle}>
        <p>Welcome to my rad blog page where I probably won't write much of anything because I'm just learning how this whole <i>"Astro"</i> thing works.  </p>
            <ul>
				{allPosts.map((post: any) => <BlogPost url={post.url} title={post.frontmatter.title} />)}
            </ul>
  </BaseLayout>
